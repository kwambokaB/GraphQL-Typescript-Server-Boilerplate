{
   "name": "graphql-ts-server-boilerplate",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "devDependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/jest": "^26.0.15",
      "@types/node": "^14.14.9",
      "@types/uuid": "^8.3.0",
      "jest": "^26.6.3",
      "ts-jest": "^26.4.4",
      "ts-node": "9.0.0",
      "typescript": "4.1.2"
   },
   "dependencies": {
      "bcryptjs": "^2.4.3",
      "gql2ts": "^1.10.1",
      "graphql-import": "^1.0.2",
      "graphql-request": "^3.3.0",
      "graphql-yoga": "^1.18.3",
      "nodemon": "^2.0.6",
      "pg": "^8.5.1",
      "reflect-metadata": "^0.1.13",
      "tslint-config-prettier": "^1.18.0",
      "typeorm": "0.2.29",
      "uuid": "^8.3.1"
   },
   "scripts": {
      "start": "SET NODE_ENV=development & nodemon --exec ts-node --files src/index.ts",
      "test-server": "SET NODE_ENV=test & ts-node --files src/index.ts",
      "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts",
      "test": "SET NODE_ENV=test & jest"
   },
   "jest": {
      "transform": {
         "^.+\\.tsx?$": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ]
   }
}
